<Window x:Class="NewsProject.AddNews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsProject"
        mc:Ignorable="d"
        Title="AddNews" Height="450" Width="800">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" Margin="35,25,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tb_headline" HorizontalAlignment="Left" Height="23" Margin="35,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="747"/>
        <Label Content="Content" HorizontalAlignment="Left" Margin="35,84,0,0" VerticalAlignment="Top"/>
        <TextBox Name="tb_content" HorizontalAlignment="Left" Height="269" Margin="35,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="747"/>
        <Button Click="ButtonAdd_Click" Content="Add" HorizontalAlignment="Left" Margin="221,389,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="ButtonClose_Click" Content="Close" HorizontalAlignment="Left" Margin="505,389,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
